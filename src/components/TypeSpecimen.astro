---
interface Props {
  label: string;
  specs: string;
  className?: string;
  sampleText?: string;
}

const { label, specs, className = '', sampleText } = Astro.props;
---

<div class="type-specimen">
  <div class="type-meta">
    <span class="type-label">{label}</span>
    <span class="type-specs">{specs}</span>
  </div>
  <div class={`type-preview ${className}`}>
    {sampleText ? sampleText : <slot />}
  </div>
</div>

<style>
  .type-specimen {
    padding: var(--s3-space-6, 32px);
    background: var(--s3-forest-base, #242b1f);
    border-radius: var(--s3-radius-xl, 28px);
    border: 1px solid rgba(126, 217, 87, 0.08);
  }

  .type-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--s3-space-4, 16px);
    padding-bottom: var(--s3-space-4, 16px);
    border-bottom: 1px solid rgba(126, 217, 87, 0.08);
  }

  .type-label {
    font-family: var(--s3-font-mono, 'JetBrains Mono', monospace);
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--s3-moss, #4a5942);
    text-transform: uppercase;
  }

  .type-specs {
    font-family: var(--s3-font-mono, 'JetBrains Mono', monospace);
    font-size: 10px;
    color: var(--s3-moss-dark, #3d4a35);
  }

  .type-preview {
    color: var(--s3-cream, #f5f1e8);
  }

  /* Type Scale Classes */
  .type-preview :global(.type-display-1) {
    font-family: var(--s3-font-display, 'Outfit', sans-serif);
    font-size: 72px;
    font-weight: 800;
    letter-spacing: -0.04em;
    line-height: 1.05;
  }

  .type-preview :global(.type-display-2) {
    font-family: var(--s3-font-display, 'Outfit', sans-serif);
    font-size: 48px;
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .type-preview :global(.type-heading-1) {
    font-family: var(--s3-font-display, 'Outfit', sans-serif);
    font-size: 32px;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .type-preview :global(.type-heading-2) {
    font-family: var(--s3-font-display, 'Outfit', sans-serif);
    font-size: 24px;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .type-preview :global(.type-body) {
    font-family: var(--s3-font-body, 'Outfit', sans-serif);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.7;
    color: var(--s3-cream-dim, #e8e4db);
  }

  .type-preview :global(.type-mono) {
    font-family: var(--s3-font-mono, 'JetBrains Mono', monospace);
    font-size: 14px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--s3-glow-cyan, #5ffbf1);
  }

  .type-preview :global(.type-accent) {
    font-family: var(--s3-font-accent, 'Fraunces', serif);
    font-size: 20px;
    font-weight: 400;
    font-style: italic;
    line-height: 1.5;
    color: var(--s3-moss-bright, #6a7858);
  }
</style>
