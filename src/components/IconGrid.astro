---
interface Props {
  color?: 'green' | 'cyan' | 'gold' | 'mixed';
}

const { color = 'mixed' } = Astro.props;

const icons = [
  { name: 'layers', path: '<path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/>' },
  { name: 'clock', path: '<circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/>' },
  { name: 'check', path: '<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>' },
  { name: 'external', path: '<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/>' },
  { name: 'search', path: '<circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>' },
  { name: 'star', path: '<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>' },
  { name: 'chat', path: '<path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>' },
  { name: 'close', path: '<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="9" y1="9" x2="15" y2="15"/><line x1="15" y1="9" x2="9" y2="15"/>' },
  { name: 'settings', path: '<circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>' },
  { name: 'home', path: '<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>' },
  { name: 'user', path: '<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>' },
  { name: 'code', path: '<polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/>' },
];

const colors = {
  green: '#7ed957',
  cyan: '#5ffbf1',
  gold: '#d4a574',
};

function getIconColor(index: number): string {
  if (color === 'mixed') {
    const colorKeys = ['green', 'cyan', 'gold'];
    return colors[colorKeys[index % 3] as keyof typeof colors];
  }
  return colors[color];
}
---

<div class="icons-grid">
  {icons.map((icon, index) => (
    <div class="icon-item">
      <svg
        viewBox="0 0 24 24"
        fill="none"
        stroke={getIconColor(index)}
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        set:html={icon.path}
      />
      <span>{icon.name}</span>
    </div>
  ))}
</div>

<style>
  .icons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(90px, 1fr));
    gap: var(--s3-space-4, 16px);
  }

  .icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--s3-space-2, 8px);
    padding: var(--s3-space-4, 16px);
    background: var(--s3-forest-base, #242b1f);
    border-radius: var(--s3-radius-lg, 20px);
    border: 1px solid rgba(126, 217, 87, 0.08);
    transition: all 150ms ease-out;
  }

  .icon-item:hover {
    border-color: rgba(126, 217, 87, 0.25);
    background: var(--s3-forest-mid, #2d3628);
  }

  .icon-item svg {
    width: 24px;
    height: 24px;
  }

  .icon-item span {
    font-family: var(--s3-font-mono, 'JetBrains Mono', monospace);
    font-size: 9px;
    color: var(--s3-moss, #4a5942);
    letter-spacing: 0.05em;
  }
</style>
