---
interface Props {
  variant?: 'primary' | 'mono' | 'light';
  background?: 'dark' | 'light' | 'gradient';
  title: string;
  description?: string;
}

const { variant = 'primary', background = 'dark', title, description } = Astro.props;

const bgStyles = {
  dark: 'background: var(--s3-void, #0d100b);',
  light: 'background: var(--s3-cream, #f5f1e8);',
  gradient: 'background: linear-gradient(135deg, var(--s3-forest-mid, #2d3628), var(--s3-moss-dark, #3d4a35));',
};
---

<div class="logo-card">
  <div class="logo-card-display" style={bgStyles[background]}>
    {variant === 'primary' && (
      <svg viewBox="0 0 120 80" width="160" height="107">
        <defs>
          <linearGradient id={`logo-${variant}-green`} x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#3d4a35" stop-opacity="0"/>
            <stop offset="100%" stop-color="#7ed957" stop-opacity="1"/>
          </linearGradient>
          <linearGradient id={`logo-${variant}-cyan`} x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#2d3628" stop-opacity="0"/>
            <stop offset="100%" stop-color="#5ffbf1" stop-opacity="1"/>
          </linearGradient>
          <linearGradient id={`logo-${variant}-gold`} x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#4a5942" stop-opacity="0"/>
            <stop offset="100%" stop-color="#d4a574" stop-opacity="1"/>
          </linearGradient>
        </defs>
        <path d="M 12 16 Q 14 13, 20 14 Q 40 12, 70 13 Q 90 12, 100 16 Q 108 19, 108 24 Q 108 29, 100 32 Q 90 35, 70 34 Q 40 36, 20 34 Q 14 33, 12 29 Q 10 26, 10 23 Q 10 19, 12 16 Z" fill={`url(#logo-${variant}-green)`}/>
        <path d="M 28 34 Q 32 31, 40 32 Q 60 30, 80 31 Q 95 30, 102 34 Q 108 37, 108 42 Q 108 47, 102 50 Q 95 53, 80 52 Q 60 54, 40 52 Q 32 53, 28 49 Q 24 46, 24 42 Q 24 38, 28 34 Z" fill={`url(#logo-${variant}-cyan)`}/>
        <path d="M 12 52 Q 14 49, 20 50 Q 40 48, 70 49 Q 90 48, 100 52 Q 108 55, 108 60 Q 108 65, 100 68 Q 90 71, 70 70 Q 40 72, 20 70 Q 14 69, 12 65 Q 10 62, 10 59 Q 10 55, 12 52 Z" fill={`url(#logo-${variant}-gold)`}/>
      </svg>
    )}
    {variant === 'mono' && (
      <svg viewBox="0 0 120 80" width="160" height="107">
        <defs>
          <linearGradient id="logo-mono-green" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#3d4a35" stop-opacity="0"/>
            <stop offset="100%" stop-color="#7ed957" stop-opacity="1"/>
          </linearGradient>
        </defs>
        <path d="M 12 16 Q 14 13, 20 14 Q 40 12, 70 13 Q 90 12, 100 16 Q 108 19, 108 24 Q 108 29, 100 32 Q 90 35, 70 34 Q 40 36, 20 34 Q 14 33, 12 29 Q 10 26, 10 23 Q 10 19, 12 16 Z" fill="url(#logo-mono-green)"/>
        <path d="M 28 34 Q 32 31, 40 32 Q 60 30, 80 31 Q 95 30, 102 34 Q 108 37, 108 42 Q 108 47, 102 50 Q 95 53, 80 52 Q 60 54, 40 52 Q 32 53, 28 49 Q 24 46, 24 42 Q 24 38, 28 34 Z" fill="url(#logo-mono-green)"/>
        <path d="M 12 52 Q 14 49, 20 50 Q 40 48, 70 49 Q 90 48, 100 52 Q 108 55, 108 60 Q 108 65, 100 68 Q 90 71, 70 70 Q 40 72, 20 70 Q 14 69, 12 65 Q 10 62, 10 59 Q 10 55, 12 52 Z" fill="url(#logo-mono-green)"/>
      </svg>
    )}
    {variant === 'light' && (
      <svg viewBox="0 0 120 80" width="160" height="107">
        <defs>
          <linearGradient id="logo-light-green" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#d4d7cc" stop-opacity="0"/>
            <stop offset="100%" stop-color="#4a6830" stop-opacity="1"/>
          </linearGradient>
          <linearGradient id="logo-light-cyan" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#d4d7cc" stop-opacity="0"/>
            <stop offset="100%" stop-color="#2a8a82" stop-opacity="1"/>
          </linearGradient>
          <linearGradient id="logo-light-gold" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#d4d7cc" stop-opacity="0"/>
            <stop offset="100%" stop-color="#8a6538" stop-opacity="1"/>
          </linearGradient>
        </defs>
        <path d="M 12 16 Q 14 13, 20 14 Q 40 12, 70 13 Q 90 12, 100 16 Q 108 19, 108 24 Q 108 29, 100 32 Q 90 35, 70 34 Q 40 36, 20 34 Q 14 33, 12 29 Q 10 26, 10 23 Q 10 19, 12 16 Z" fill="url(#logo-light-green)"/>
        <path d="M 28 34 Q 32 31, 40 32 Q 60 30, 80 31 Q 95 30, 102 34 Q 108 37, 108 42 Q 108 47, 102 50 Q 95 53, 80 52 Q 60 54, 40 52 Q 32 53, 28 49 Q 24 46, 24 42 Q 24 38, 28 34 Z" fill="url(#logo-light-cyan)"/>
        <path d="M 12 52 Q 14 49, 20 50 Q 40 48, 70 49 Q 90 48, 100 52 Q 108 55, 108 60 Q 108 65, 100 68 Q 90 71, 70 70 Q 40 72, 20 70 Q 14 69, 12 65 Q 10 62, 10 59 Q 10 55, 12 52 Z" fill="url(#logo-light-gold)"/>
      </svg>
    )}
  </div>
  <div class="logo-card-info">
    <h3 class="logo-card-name">{title}</h3>
    {description && <p class="logo-card-desc">{description}</p>}
  </div>
</div>

<style>
  .logo-card {
    background: var(--s3-forest-base, #242b1f);
    border: 1px solid rgba(126, 217, 87, 0.08);
    border-radius: var(--s3-radius-xl, 28px);
    overflow: hidden;
    transition: all 300ms cubic-bezier(0.16, 1, 0.3, 1);
  }

  .logo-card:hover {
    transform: translateY(-4px);
    border-color: rgba(126, 217, 87, 0.2);
    box-shadow: var(--s3-glow-green, 0 0 40px rgba(126, 217, 87, 0.15));
  }

  .logo-card-display {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-card-info {
    padding: var(--s3-space-5, 24px);
    border-top: 1px solid rgba(126, 217, 87, 0.08);
    background: rgba(0, 0, 0, 0.2);
  }

  .logo-card-name {
    font-weight: 600;
    font-size: 15px;
    margin: 0 0 var(--s3-space-1, 4px) 0;
    color: var(--s3-cream, #f5f1e8);
  }

  .logo-card-desc {
    font-size: 13px;
    color: var(--s3-moss, #4a5942);
    margin: 0;
  }
</style>
